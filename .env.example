# MoonPhase Application Configuration
# Copy this file to .env and customize for your environment
# Referenced by docker-compose files

# Application Settings
SPRING_APPLICATION_NAME=MoonPhase

# Scheduling Configuration
# Default: 3600000 (1 hour)
# 60000 = 1 minute
# 300000 = 5 minutes
# 600000 = 10 minutes
# 1800000 = 30 minutes
# 3600000 = 1 hour
MOON_PHASE_UPDATE_INTERVAL=3600000

# Logging Level
# Options: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL_ROOT=INFO

# Spring Framework Logging
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO

# Timezone
# Examples: UTC, Europe/London, America/New_York, Asia/Tokyo
TZ=UTC

# Docker Compose Service Configuration
COMPOSE_PROJECT_NAME=moonphase

# Image Configuration
IMAGE_NAME=moonphase
IMAGE_TAG=1.0-SNAPSHOT
REGISTRY=

# Container Limits
# These are used by docker-compose for resource management
CPU_LIMIT=1
CPU_RESERVATION=0.5
MEMORY_LIMIT=512M
MEMORY_RESERVATION=256M

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Development Environment (optional)
# Set to "true" to enable development mode
DEBUG_MODE=false

